---
import Layout from "../layouts/Layout.astro"
import PokemonCard from "../components/PokemonCard.astro"
import type { PokemonListResponse } from "../interfaces/pokemon-list.response.ts"
import "../styles/global.css"
const title = "Home"

const resp = await fetch('https://pokeapi.co/api/v2/pokemon');
const data = await resp.json() as PokemonListResponse;

---
<Layout title={title}> 
	<h1 class="text-3xl px-0 py-8">Pokemon List</h1>
	<section class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-3 gap-6" aria-label="Listado de PokÃ©mons">
		{ data.results.map((pokemon) =>  <PokemonCard url={pokemon.url} />) }
	</section>
</Layout>
